                                        <Grid>
                                            <Border BorderThickness="1" Margin="1"
                                            BorderBrush="{DynamicResource AccentColorBrush}">
                                                <StackPanel Orientation="Horizontal">
                                                    <!--<TextBlock  
                                                Height="25"  FontWeight="Bold"
                                                HorizontalAlignment="Left"
                                                Margin="1,1,1,1"
                                                Text="Area: "
                                                Width="110"
                                                VerticalAlignment="Center"/>-->
